<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    app:layout_collapseMode="none">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="327dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/fab_margin"
        app:cardElevation="14dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/cabinImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="0.12"
                        android:adjustViewBounds="true"

                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/abiskojaure" />

                </FrameLayout>

                <view
                    android:id="@+id/view8"
                    class="android.support.v7.widget.AppCompatImageView"
                    id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/cabinTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textViewLatLng"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="29dp"
                    android:layout_weight="0.12"
                    android:fontFamily="sans-serif"
                    android:text="Cabin Name"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewLatLng"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:text="CoÃ¶rdinates"
                    android:textColor="@android:color/darker_gray"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/cabinTextView" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>